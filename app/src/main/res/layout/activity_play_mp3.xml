<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/logo"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/logo_banglaaudiostories"
        />


    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.Wave"
        android:layout_width="300dp"
        android:layout_marginTop="50dp"
        android:layout_height="80dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/colorPrimary" />




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imbList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:background="@null"
                android:src="@drawable/button_selector"
                android:visibility="invisible" />

            <TextView

                android:id="@+id/mediPlyerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="108dp"
                android:gravity="center"
                android:text="No media selected !"

                android:textColor="@color/green"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="11dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:id="@+id/textView"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:id="@+id/textView2"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
        android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mp3_bg"
            >
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="15dp"
                android:id="@+id/imageButton3"
                android:background="@null"
                android:src="@drawable/play_selector" />

            <SeekBar
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="10dp"
                android:id="@+id/seekBar"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/seek_thumb"
                 />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"

            android:paddingTop="5dp"
            android:paddingBottom="3dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            >


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton4"
                android:background="@null"
                android:visibility="gone"
                android:src="@drawable/stop_selector" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>